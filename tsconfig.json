{
  "compilerOptions": {
    "target": "ES2018",
    "module": "ES6",
    "declaration": true,
    "baseUrl": ".",
    "outDir": "dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "moduleResolution": "Node"
  },
  "include": ["src/**/*.ts"]
}
